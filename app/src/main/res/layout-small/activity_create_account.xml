            <!--        Radio Buttons-->
            <RadioGroup
                android:id="@+id/create_account_farmer_buyer_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_location"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <RadioButton
                    android:id="@+id/create_account_farmer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Farmer"

                    android:textColor="@color/azure_green" />

                <RadioButton
                    android:id="@+id/create_account_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Buyer"
                    android:textColor="@color/azure_green" />

            </RadioGroup>

            <!--        Create account button-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_create_account_get_started"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_farmer_buyer_option"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:text="Create Account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <!--    Login instead-->
            <RelativeLayout
                android:id="@+id/create_account_extra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_create_account_get_started"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/already_have_account_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Already have an account?"
                    android:textColor="@color/azure_orange"
                    android:textSize="12dp" />

                <!--        Already have account, Login-->
                <TextView
                    android:id="@+id/farmer_new_user_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_toRightOf="@id/already_have_account_text"
                    android:text="Login"
                    android:textColor="@color/azure_green"
                    android:textSize="12dp" />


            </RelativeLayout>


