<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setup.CreateAccountActivity"
    android:background="@color/azure_background_color">

    <!--    Top title icon-->
    <RelativeLayout
        android:id="@+id/top_title_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/azure_background_color"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="Create Account"
            android:textColor="@color/azure_orange"
            android:textSize="24sp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-20dp"
            android:src="@drawable/icon_logo" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/create_account_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_title_icon">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!--        Name-->
            <EditText
                android:id="@+id/create_account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edt_shape"
                android:drawableLeft="@drawable/account_circle_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:hint="Name"
                android:inputType="text"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:textColor="@color/azure_green"
                android:textColorHint="@color/azure_light_green"
                android:textSize="14dp" />

            <!--    Email-->
            <EditText
                android:id="@+id/create_account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_name"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edt_shape"
                android:drawableLeft="@drawable/email_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:hint="Email"
                android:inputType="textWebEmailAddress"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:textColor="@color/azure_green"
                android:textColorHint="@color/azure_light_green"
                android:textSize="14dp" />

            <!--        Phone-->
            <EditText
                android:id="@+id/create_account_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_email"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edt_shape"
                android:drawableLeft="@drawable/phone_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:hint="Phone Number"
                android:inputType="phone"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:textColor="@color/azure_green"
                android:textColorHint="@color/azure_light_green"
                android:textSize="14dp" />

            <!--        Password-->
            <EditText
                android:id="@+id/create_account_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_phone"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edt_shape"
                android:drawableLeft="@drawable/password_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:textColor="@color/azure_green"
                android:textColorHint="@color/azure_light_green"
                android:textSize="14dp" />

            <!--        Confirm password-->
            <EditText
                android:id="@+id/create_account_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_password"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edt_shape"
                android:drawableLeft="@drawable/password_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:textColor="@color/azure_green"
                android:textColorHint="@color/azure_light_green"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/create_account_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/create_account_confirm_password"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edt_shape"

                android:drawableLeft="@drawable/location_on_24"
                android:drawablePadding="8dp"
                android:elevation="8dp"
                android:hint="Location"
                android:inputType="textAutoComplete"
                android:minHeight="48dp"
                android:paddingStart="16dp"
                android:textColor="@color/azure_green"
                android:textColorHint="@color/azure_light_green"
                android:textSize="14dp" />

